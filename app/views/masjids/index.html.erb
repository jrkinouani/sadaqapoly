<section>
  <div class="container">

    <p id="notice"><%= notice %></p>

    <h1>Masjids</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @masjids.each do |masjid| %>
        <tr>
          <td><%= masjid.name %></td>
          <td><%= link_to 'Show', masjid %></td>
          <td><%= link_to 'Edit', edit_masjid_path(masjid) %></td>
          <td><%= link_to 'Destroy', masjid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Masjid', new_masjid_path %>
  </div>
</section>
